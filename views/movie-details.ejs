                <a href="./movie-details.html">
                  <figure class="card-banner">
                    <img src="<%= randomMovieImageLink4  %>" alt="<%= randomMovie4  %> movie poster">
                  </figure>
                </a>

                <div class="title-wrapper">
                  <a href="./movie-details.html">
                    <h3 class="card-title"><%= randomMovie4  %></h3>
                  </a>

                  <time><%= randomMovieDate4  %></time>

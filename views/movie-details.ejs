                <div class="card-meta">
                  <div class="badge badge-outline"><%= randomMovieResolution4  %></div>

                  <div class="duration">
                    <ion-icon name="time-outline"></ion-icon>

                    <time><%= randomMovieDurationTime4  %></time>
                  </div>

                  <div class="rating">
                    <ion-icon name="star"></ion-icon>

                    <data><%= randomMovieRating4  %></data>
                  </div>
                </div>

              </div>
            </li>

          </ul>

        </div>
      </section>

    </article>
  </main>






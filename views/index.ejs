<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Satoflix - Best movie collections</title>

  <!-- 
    - favicon
  -->
  <link rel="shortcut icon" href="images/Sfavicon.PNG" type="image/svg+xml">

  <!-- 
    - custom css link
  -->
  <link rel="stylesheet" href="css/style.css">

  <!-- 
    - google font link
  -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>

<body id="top">

  <!-- 
    - #HEADER
  -->

  <%- include('partials/header.ejs') %>





  <main>
    <article>

      <!-- 
        - #HERO
      -->

      <section class="hero" style="background: url(<%=backdrop%>) no-repeat; margin-bottom: -6%; margin-top: 6%;">
        <div class="container">

          <div class="hero-content">

            <p class="hero-subtitle">The Best Movie of 2023</p>

            <h1 class="h1 hero-title">
              <%= heroMovie.title %>
            </h1>

            <div class="meta-wrapper">

              <div class="badge-wrapper">

                <div class="badge badge-outline">HD</div>
              </div>


              <div class="date-time">

                <div>
                  <ion-icon name="calendar-outline"></ion-icon>

                  <time datetime=<%= heroMovie.year %>><%= heroMovie.year %></time>
                </div>

                <div>
                  <ion-icon name="time-outline"></ion-icon>

                  <time datetime=<%= heroMovie.runtime %>><%= heroMovie.runtime %></time>
                </div>

              </div>

            </div>

            <form id="heroMovieForm" action="./movie-details.ejs" method="post">
              <input type="hidden" name="movieName" value="<%= heroMovie.title %>">
              <input type="hidden" name="movieId" value="<%= heroMovie.movie_id %>">
              <button class="btn btn-primary">
                <ion-icon name="play"></ion-icon>
  
                <span>Watch now</span>
              </button>
            </form>

          </div>

        </div>
      </section>





      <!-- 
        - #UPCOMING
      -->

      <section class="upcoming">
        <div class="container">

          <div class="flex-wrapper">

            <div class="title-wrapper">
              <p class="section-subtitle">Online Streaming</p>

              <h2 class="h2 section-title">Upcoming Movies</h2>
            </div>


          </div>

          <ul class="movies-list has-scrollbar">
            <% upcomingMovies.forEach((movie, index)=> { %>
              <li>
                <div class="movie-card">
                  <form id="upcomingMovieDetailsForm<%= index %>" action="./movie-details.ejs" method="post">
                    <input type="hidden" name="movieName" value="<%= movie.title %>">
                    <input type="hidden" name="movieId" value="<%= movie.movie_id %>">
                  </form>

                  <a href="./movie-details.ejs"
                    onclick="document.getElementById('upcomingMovieDetailsForm<%= index %>').submit(); return false">
                    <figure class="card-banner">
                      <img src="<%= movie.poster %>" alt="<%= movie.title %> movie poster">
                    </figure>
                  </a>

                  <div class="title-wrapper">
                    <a href="./movie-details.ejs"
                      onclick="document.getElementById('movieDetailsForm<%= index %>').submit(); return false">
                      <h3 class="card-title">
                        <%= movie.title %>
                      </h3>
                    </a>

                    <time datetime="<%= movie.year %>">
                      <%= movie.year %>
                    </time>
                  </div>
                </div>
              </li>
              <% }); %>
          </ul>


        </div>
      </section>







      <!-- 
        - #TOP RATED
      -->

      <section class="top-rated">
        <div class="container">

          <p class="section-subtitle">Online Streaming</p>

          <h2 class="h2 section-title">Top Rated Movies</h2>


          <ul class="movies-list">
            <% topRatedMovies.forEach((movie, index)=> { %>
              <li>
                <div class="movie-card">

                  <form id="movieDetailsForm<%= index %>" action="./movie-details.ejs" method="post">
                    <input type="hidden" name="movieName" value="<%= movie.title %>">
                    <input type="hidden" name="movieId" value="<%= movie.movie_id %>">
                  </form>

                  <a href="./movie-details.ejs"
                    onclick="document.getElementById('movieDetailsForm<%= index %>').submit(); return false">
                    <figure class="card-banner">
                      <img src="<%= movie.poster %>" alt="<%= movie.title %> movie poster">
                    </figure>
                  </a>

                  <div class="title-wrapper">
                    <a href="./movie-details.ejs"
                      onclick="document.getElementById('movieDetailsForm<%= index %>').submit(); return false">
                      <h3 class="card-title">
                        <%= movie.title %>
                      </h3>
                    </a>

                    <time datetime="<%= movie.year %>">
                      <%= movie.year %>
                    </time>
                  </div>

                  <div class="card-meta">
                    <div class="badge badge-outline">2K</div>

                    <div class="duration">
                      <ion-icon name="time-outline"></ion-icon>
                      <time datetime="PT<%= movie.runtime.slice(0, -4) %>M">
                        <%= movie.runtime.slice(0, -4) %>
                      </time>
                    </div>

                    <div class="rating">
                      <ion-icon name="star"></ion-icon>
                      <data>
                        <%= movie.imdb_rating %>
                      </data>
                    </div>
                  </div>

                </div>
              </li>
              <% }); %>
          </ul>


        </div>
      </section>





      <!-- 
        - #TV SERIES
      -->

      <section class="tv-series">
        <div class="container">

          <p class="section-subtitle">Best TV Series</p>

          <h2 class="h2 section-title">World Best TV Series</h2>

          <ul class="movies-list">
            <% topRatedSeries.forEach((series, index)=> { %>
              <li>
                <div class="movie-card">

                  <form id="seriesDetailsForm<%= index %>" action="./movie-details.ejs" method="post">
                    <input type="hidden" name="movieName" value="<%= series.title %>">
                    <input type="hidden" name="movieId" value="<%= series.series_id %>">
                  </form>

                  <a href="./movie-details.ejs"
                    onclick="document.getElementById('seriesDetailsForm<%= index %>').submit(); return false">
                    <figure class="card-banner">
                      <img src="<%= series.poster %>" alt="<%= series.title %> movie poster">
                    </figure>
                  </a>

                  <div class="title-wrapper">
                    <a href="./movie-details.ejs"
                      onclick="document.getElementById('seriesDetailsForm<%= index %>').submit(); return false">
                      <h3 class="card-title">
                        <%= series.title %>
                      </h3>
                    </a>

                    <time datetime="<%= series.year %>">
                      <%= series.year %>
                    </time>
                  </div>

                  <div class="card-meta">
                    <div class="badge badge-outline">2K</div>

                    <div class="duration">
                      <ion-icon name="time-outline"></ion-icon>
                      <time datetime="PT<%= series.runtime.slice(0, -4) %>M">
                        <%= series.runtime.slice(0, -4) %>
                      </time>
                    </div>

                    <div class="rating">
                      <ion-icon name="star"></ion-icon>
                      <data>
                        <%= series.imdb_rating %>
                      </data>
                    </div>
                  </div>

                </div>
              </li>
              <% }); %>
          </ul>


        </div>
      </section>






    </article>
  </main>





  <!-- 
    - #FOOTER
  -->

  <%- include('partials/footer.ejs') %>





  <!-- 
    - #GO TO TOP
  -->

  <a href="#top" class="go-top" data-go-top>
    <ion-icon name="chevron-up"></ion-icon>
  </a>





  <!-- 
    - custom js link
  -->
  <script src="/script.js"></script>

  <!-- 
    - ionicon link
  -->
  <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
  <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

</body>

</html>
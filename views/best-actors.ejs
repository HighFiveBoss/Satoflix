<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Satoflix - Best movie collections</title>

  <!-- 
    - favicon
  -->
  <link rel="shortcut icon" href="images/Sfavicon.PNG" type="image/svg+xml">

  <!-- 
    - custom css link
  -->
  <link rel="stylesheet" href="css/style.css">

  <!-- 
    - google font link
  -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>

<body id="top">

  <!-- 
    - #HEADER
  -->

  <%- include('partials/header.ejs') %>





  <main>
    <article>

      <!-- 
        - #UPCOMING
      -->

      <section class="upcoming">
        <div class="container">

          <div class="flex-wrapper">

            <div class="title-wrapper">
              <h2 class="h2 section-title">Movies</h2>
            </div>


          </div>

          <% for (let i=0; i<actorCounter.length;i++) { %>
            <h3 class="section-subtitle" style="font-size: var(--fs-6);">
              <%= actorCounter[i] %>
            </h3>

            <ul class="movies-list has-scrollbar">

              <% bestActors.forEach((movie, index)=> { %>
                <% if(movie.actor==actorCounter[i]) { %>
                  <li>
                    <div class="movie-card">
                      <form id="upcomingMovieDetailsForm<%= index %>" action="./movie-details.ejs" method="post">
                        <input type="hidden" name="movieName" value="<%= movie.title %>">
                        <input type="hidden" name="movieId" value="<%= movie.movie_id %>">
                      </form>

                      <a href="./movie-details.ejs"
                        onclick="document.getElementById('upcomingMovieDetailsForm<%= index %>').submit(); return false">
                        <figure class="card-banner">
                          <img src="<%= movie.poster %>" alt="<%= movie.title %> movie poster">
                        </figure>
                      </a>

                      <div class="title-wrapper">
                        <a href="./movie-details.ejs"
                          onclick="document.getElementById('movieDetailsForm<%= index %>').submit(); return false">
                          <h3 class="card-title">
                            <%= movie.title %>
                          </h3>
                        </a>

                        <time datetime="<%= movie.year %>">
                          <%= movie.year %>
                        </time>
                      </div>
                    </div>
                  </li>
                  <% } %>
                    <% }); %>
            </ul>
            <% } %>


        </div>
      </section>











      <!-- 
    - #FOOTER
  -->

      <%- include('partials/footer.ejs') %>





      <!-- 
    - #GO TO TOP
  -->

      <a href="#top" class="go-top" data-go-top>
        <ion-icon name="chevron-up"></ion-icon>
      </a>





      <!-- 
    - custom js link
  -->
      <script src="/script.js"></script>

      <!-- 
    - ionicon link
  -->
      <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
      <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

</body>

</html>